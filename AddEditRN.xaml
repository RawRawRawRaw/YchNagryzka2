<Window x:Class="УчебнаяНагрузка1.AddEditRN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчебнаяНагрузка1"
        mc:Ignorable="d"
            Title="AddEditWin" x:Name="WindowAddEdit" Height="500" Width="210" ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Background="White">
        <Label Content="Добавить запись" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <Label Content="Табельный номер препода" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <Button x:Name="btnAddEdit" Content="Добавить/&#xA;Изменить" Click="AddEdit_click" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" Height="36" Width="167" BorderBrush="White" Background="#FFDEDEDE"/>
        <Button Content="Отмена" Click="esc_click" HorizontalAlignment="Left" Margin="10,388,0,0" VerticalAlignment="Top" Height="36" Width="167" Background="#FFE0E0E0" BorderBrush="White"/>
        <Label Content="Номер группы" HorizontalAlignment="Left" Margin="10,163,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="Nomer" Text="{Binding НомерГруппы}" HorizontalAlignment="Left" Margin="10,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Label Content="Ключ" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="Kl" Text="{Binding Ключ}" HorizontalAlignment="Left" Margin="10,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Label Content="Семестр" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="Sem" Text="{Binding Семестр}" HorizontalAlignment="Left" Margin="10,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Label Content="количество часов" HorizontalAlignment="Left" Margin="10,282,0,0" VerticalAlignment="Top" Height="30" Width="167"/>
        <TextBox x:Name="kol" Text="{Binding КоличествоЧасов}" HorizontalAlignment="Left" Margin="10,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <ComboBox x:Name="TabNom" Text="{Binding ТабельныйНомерПрепода}" HorizontalAlignment="Left" Margin="10,141,0,0" VerticalAlignment="Top" Width="167" BorderBrush="White"></ComboBox>
    </Grid>
</Window>
