<Window x:Class="УчебнаяНагрузка1.AddEditP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчебнаяНагрузка1"
        mc:Ignorable="d"
        Title="ИзмТаблПреподы" x:Name="AddEditPr" Height="350" Width="320" ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <Label Content="ТабельныйНомер" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="95"/>
        <TextBox x:Name="TabNom" Text="{Binding ТабельныйНомер}" HorizontalAlignment="Left" Margin="150,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="30" Width="95"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="30" Width="116"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Height="30" Width="116"/>
        <Label Content="Должность" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Height="30" Width="116"/>
        <Label Content="Стаж" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Height="30" Width="116"/>
        <Label Content="Кафедра" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Height="30" Width="116"/>
        <TextBox x:Name="fam" Text="{Binding Фамилия}" HorizontalAlignment="Left" Margin="150,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="im" Text="{Binding Имя}" HorizontalAlignment="Left" Margin="150,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="ot" Text="{Binding Отчество}" HorizontalAlignment="Left" Margin="150,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="dol" Text="{Binding Должность}" HorizontalAlignment="Left" Margin="150,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="st" Text="{Binding Стаж}" HorizontalAlignment="Left" Margin="150,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <ComboBox x:Name="kaf" Text="{Binding Кафедра}" HorizontalAlignment="Left" Margin="150,219,0,0" VerticalAlignment="Top" Width="140" BorderBrush="White">
        </ComboBox>
        <Button x:Name="btnAddEdit" Content="Добавить/&#xA;Изменить" Click="AddEdit_click" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Height="36" Width="131" BorderBrush="White" Background="Gainsboro"/>
        <Button Content="Отмена" Click="esc_click" HorizontalAlignment="Left" Margin="150,255,0,0" VerticalAlignment="Top" Height="36" Width="140" Background="#FFD4D4D4" BorderBrush="White"/>
    </Grid>
</Window>
