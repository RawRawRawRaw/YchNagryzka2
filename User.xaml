<Window x:Class="УчебнаяНагрузка1.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчебнаяНагрузка1"
        mc:Ignorable="d"
            Title="Вход" Height="270" Width="300">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="30" Width="48"/>
        <TextBox x:Name="Log" HorizontalAlignment="Center" Margin="0,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Label Content="     Пароль" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Height="30" Width="90"/>
        <TextBox x:Name="Pas" HorizontalAlignment="Center" Margin="0,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140"/>
        <Button x:Name="btnLog" Content="Войти" Click="Log_click" HorizontalAlignment="Left" Margin="39,137,0,0" VerticalAlignment="Top" Height="36" Width="111" BorderBrush="White" Background="#FFE8E8E8"/>
        <Button Content="Отмена" Click="esc_click" HorizontalAlignment="Center" Margin="0,173,0,0" VerticalAlignment="Top" Height="36" Width="132" Background="#FFEAEAEA" BorderBrush="White"/>
        <Button x:Name="btnLogG" Content="Войти как гость" Click="LogG_click" HorizontalAlignment="Left" Margin="155,137,0,0" VerticalAlignment="Top" Height="36" Width="107" BorderBrush="White" Background="#FFE8E8E8"/>

    </Grid>
</Window>
